<?php

use Krystal\Form\Element;
use Krystal\Widget\GridView\GridViewWidget;
use Cms\View\Icon;

defined('KRYSTAL') or die;

?>

<div class="card">
    <div class="card-header">
        <h4 class="card-title"><?php $this->show('Dictionary'); ?> <small>(<?= count($items); ?>)</small></h4>
    </div>

    <div class="btn-toolbar">
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            <i class="glyphicon glyphicon-list"></i> <?php $this->show('Menu'); ?> <span class="caret"></span>
          </button>

          <div class="dropdown-menu">
             <a class="dropdown-item" href="<?php echo $this->url('Dictionary:Admin:Dictionary@addAction'); ?>"><i class="glyphicon glyphicon-file"></i> <?php $this->show('Add new item'); ?></a>
             <div class="dropdown-divider"></div>
             <div class="dropdown-header"><?php $this->show('Actions'); ?></div>
             <?php if (!empty($items)): ?>
             <a class="dropdown-item" href="#" data-button="remove-selected" data-url="<?php echo $this->url('Dictionary:Admin:Dictionary@deleteAction', null); ?>"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('Remove selected'); ?></a>
             <?php else: ?>
             <a class="dropdown-item"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show('Save changes'); ?></a>
             <a class="dropdown-item"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('Remove selected'); ?></a>
             <?php endif; ?>
          </div>
        </div>
    </div>

    <form>
        <div class="table-responsive">
            <?= $this->widget(new GridViewWidget($items, array(
                'batch' => true,
                'pk' => 'id',
                'tableClass' => 'table table-hover table-bordered table-striped table-condensed',
                'columns' => array(
                    array(
                        'column' => 'id',
                        'label' => '#'
                    ),

                    array(
                        'column' => 'value'
                    ),

                    array(
                        'column' => 'alias'
                    )
                ),

                'actions' => array(
                    'edit' => function($row){
                        return Icon::edit(
                            $this->url('Dictionary:Admin:Dictionary@editAction', $row['id']),
                            $this->translate('Edit this item')
                        );
                    },

                    'remove' => function($row){
                        return Icon::remove(
                            $this->url('Dictionary:Admin:Dictionary@deleteAction', $row['id']),
                            $this->translate('Remove this item')
                        );
                    }
                )
            ))); ?>

            <?php if (empty($items)): ?>
            <div class="center-block">
                <h2 class="text-center text-muted"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('No items'); ?></h2>
            </div>
            <?php endif; ?>
        </div>
    </form>

    <?php $this->loadPartial('paginator'); ?>

</div>